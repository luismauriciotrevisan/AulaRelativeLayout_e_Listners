<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aularelativelayout_e_listners.MainActivity">

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/bt_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botao_1"
        android:layout_alignLeft="@id/tv_01"
        android:layout_above="@id/tv_01"/>

    <Button
        android:id="@+id/bt_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botao_2"
        android:layout_above="@id/tv_01"
        android:layout_alignRight="@id/tv_01"
        />
    <Button
        android:id="@+id/bt_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botao_3"
        android:layout_below="@id/tv_01"
        android:layout_alignRight="@id/tv_01"/>
    <Button
        android:id="@+id/bt_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_01"
        android:layout_below="@id/tv_01"
        android:text="Botao_4"/>

</RelativeLayout>
